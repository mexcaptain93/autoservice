.services

  &__heading
    margin-bottom: 30px

  &__text
    padding: 0 70px
    margin-bottom: 30px

    p
      font-size: 11px
      font-weight: 600
      line-height: 24px
      color: $gray2
      text-transform: uppercase

  &__list
    display: flex
    flex-wrap: wrap
    padding: 0 70px

  &__item
    width: 198px
    height: 113px
    margin-right: 55px
    margin-bottom: 30px
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    background-color: $blue
    border: 2px solid $blue_light
    border-radius: 5px
    box-shadow: 4px 2px 5px 0px rgba(0,0,0,0.25)

    &:nth-child(3n)
      margin-right: 0

  .service

    &__text
      color: $white
      font-size: 14px
      line-height: 24px
      text-transform: uppercase
      text-decoration: underline

    &__icon
      margin-bottom: 8px
      height: 60px

      img
        max-width: 100%
        max-height: 100%