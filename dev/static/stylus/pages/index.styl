.index

  &__advantages
    margin-bottom: 55px

    .advantages

      &__list
        display: flex
        width: 545px
        margin: 0 auto
        justify-content: space-between

      &__item
        flex-grow: 0
        flex-basis: 0

    .advantage

      &__img
        margin-bottom: 8px

      &__text
        font-size: 16px
        line-height: 20px
        color: $blue
        text-align: center
        text-transform: uppercase





  &__text
    padding: 0 80px
    margin-bottom: 50px
    
    .text
      
      &__main
        margin-bottom: 24px

        text-transform: uppercase
        font-weight: bold

  &__map
    height: 300px