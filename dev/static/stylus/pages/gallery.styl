.gallery

  &__list
    display: flex
    flex-wrap: wrap
    padding: 0 70px

  &__item
    width: 212px
    height: 170px
    margin-right: 33px
    margin-bottom: 29px
    background-size: cover
    background-position: center center
    transition: .3s ease transform

    &:hover
      transform: scale(1.15)
      box-shadow: 1px 2px 4.75px 0.25px rgba(0, 0, 0, 0.75)

    &:nth-child(3n)
      margin-right: 0