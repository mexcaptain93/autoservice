.slider
  margin-bottom: 55px

  .slick-arrow
    display: none !important

  .slick-dots
    position: absolute
    bottom: 11px
    left: 50%
    transform: translateX(-50%)

    li
      display: inline-block
      margin-right: 19px

      &:last-child
        margin-right: 0

      &.slick-active

        button
          background-color: $blue

      button
        width: 12px
        height: 12px
        font-size: 0
        line-height: 0
        background: $white
        border: none
        border-radius: 50%
        cursor: pointer

  &__list
    padding: 0 2px

  &__item
    width: 100%
    height: 300px
    position: relative
    border-radius: 5px
    background-repeat: no-repeat
    background-size: cover

  .slide

    &__text
      width: 350px
      height: 100px
      position: absolute
      top: 77px
      right: 0
      padding: 14px 50px

      font-size: 18px
      color: $white
      border-top: 10px solid $blue
      background-color: alpha($black, 0.7)